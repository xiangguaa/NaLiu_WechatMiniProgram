page{
  height: 100%;
  width: 100%;
}
.poem_wrp{
  height: 27%;
  width: 750rpx;
}

.tape_wrp{
    height: 20%;
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.tape{
  height: 100%;
  width: 3%;
  background-color: #DFDFDF;
  position: relative;
  top: 40%;
}


.poem{
  height: 78%;
  margin: 1%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 5rpx;
  border-color: rgb(0, 0, 0);
}

.poem_img{
  height: 100%;
  width: 100%;
}

.text_wrp{
  position: relative;
  bottom: 160rpx;
  left: 50rpx;
}

.t1{
  font-size: 35rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; 
  margin-right: 60rpx;

}

.t2{
  font-size: 20rpx;
  letter-spacing: 10rpx;
  position: absolute;
  left: 62%;


}

.main_content{
  margin-top: 0.7%;
  display: flex;
  flex-direction: row;
  height: 70%;
  margin-left: 0.5%;
  margin-right: 0.5%;

  flex-wrap: wrap;
  padding: 1%;
  justify-content: space-around;
  align-items: center;
}

.nav{
  display: flex;
  width: 45%;
  height: 190rpx;
  border-radius: 5rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  
  font-variant-position: normal;
}

.img{
  width: 55%;
  height: 55%;
}
.img2{
  height: 15%;
  width: 25%;
  position: absolute;
  left: 5%;
}
.img3{
  height: 10%;
  width: 24%;
  position: absolute;
  left: 5%;
  
}
.text1{
  color: aliceblue;
  font-size: 50rpx;
  position: absolute;
  left: 19.5%;
}
.text2{
  color: aliceblue;
  font-size: 50rpx;
  position: absolute;
  right:18.5%;
}
.text3{
  color: black;
  font-size: 50rpx;
  position: absolute;
  left: 51%;
  font-weight: 300;
}

.long_nav{
  display: flex;
  width: 95%;
  height: 190rpx;
  border-radius: 5rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  font-weight: bold;
  font-variant-position: normal;  
}


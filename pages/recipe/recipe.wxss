page{
    height: 100%;
}

.input_wrp{
    background-color: rgb(214, 226, 231);
    border-radius: 40rpx;
    margin: 20rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
}

.input{
    margin-left: 30rpx;
    /* margin-right: 30rpx;     */
}

.input-placeholder{
    margin-left: 10rpx;
    /* text-indent: 15rpx; */
}

.cancel_img{
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    right: 20rpx;
}

.suggest_title{
    font-size: 60rpx;
    margin: 15rpx;
    letter-spacing: 12rpx;
    font-weight: 200;
}
.suggest{
    margin: 30rpx;
    /* background-color: rgb(202, 208, 153); */
    border-radius: 10rpx;
    height: 175rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-style: solid;
    border-width: 3rpx;
    padding: 15rpx;
}


.unit{
    margin-top: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    /* background-color: #395; */
    border-radius: 7rpx;
    position: relative;
    bottom: 15rpx;
    border-style: solid;
    border-width: 3rpx;
    box-shadow: 0rpx 4rpx 2rpx 3rpx;
    border-color: plum;
}

.name{
    margin-top: 10rpx;
    /* display: flex;
    justify-content: space-between;
    align-items: center; */
    /* background-color: rgb(51, 65, 153); */
    border-radius: 10rpx;
    margin: 20rpx;
    padding: 20rpx;
    height: 200rpx;
}


.unit_name{
    margin-left: 12rpx;
    font-size: 60rpx;
    letter-spacing: 5rpx;
}

.brief_intro{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    word-break: break-all;
    font-size: 35rpx;
}



.main{
    height: 100%;
}


.arrow{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 20rpx;
    top: 5rpx;
} 

.detial_wrp{
    height: 95%;
    overflow: scroll;
    
}

.detail{
    background-color: rgb(115, 27, 27);
    width: 100%;
    border-radius: 15rpx;

}

.content{
    margin: 7rpx;
    display: -webkit-box;
    font-size:34rpx;
    color:#000000;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
    text-overflow:ellipsis;
    font-weight: 500;


}


.material{
    margin: 15rpx;
    margin-left: 20rpx;
    width: 375rpx;
    border-style: solid;
    border-width: 2rpx;
    display: flex;
    justify-content: space-around;
    /* background-color: #369; */
    align-items: center;
}
.mname{
    font-size: 25rpx;
    width: 200rpx;
}
.progress{
    background-color:#f3f0f0;    
    margin-top: 15rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.progress_text{
    width: 680rpx;
    margin: 10rpx;
}
.progress_img{
    margin: 5rpx;
    width: 100%;

}